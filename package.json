{
  "name": "@xyo-network/app-xyo-nodejs",
  "version": "0.6.20",
  "description": "The XYO application for running components on the XYO network",
  "main": "dist/index.js",
  "bin": {
    "xyolo": "bin/start-node.js"
  },
  "scripts": {
    "forever": "forever --max-old-space-size=4096 ./bin/start-forever.js",
    "start": "node --max-old-space-size=4096 ./bin/start-node.js start",
    "stop": "./bin/stop-node.js",
    "pretest": "yarn install",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "yarn lint",
    "build": "yarn xybuild",
    "license": "yarn license-checker --onlyAllow 'MIT;BSD-2-Clause;BSD-3-Clause;Apache-2.0;ISC;Unlicense;UNKNOWN;BSD*;CC0-1.0' --excludePackages 'colors@0.6.2'",
    "develop": "ts-node ./src/index.ts",
    "snyk-protect": "snyk protect",
    "prepublish": "yarn run snyk-protect"
  },
  "types": "dist/index.d.ts",
  "author": "XYO Development Team",
  "license": "LGPL-3.0",
  "files": [
    "dist",
    "bin"
  ],
  "dependencies": {
    "@xyo-network/sdk-base-nodejs": "0.5.2",
    "@xyo-network/sdk-core-nodejs": "0.70.1",
    "apollo-server": "2.5.0",
    "apollo-server-express": "^2.5.0",
    "bs58": "^4.0.1",
    "commander": "^2.19.0",
    "dotenv-expand": "^5.1.0",
    "enquirer": "^2.3.0",
    "express": "^4.17.0",
    "forever": "^2.0.0",
    "fs-extra": "^7.0.1",
    "global-modules": "^2.0.0",
    "graphql": "^14.3.0",
    "graphql-type-json": "^0.3.0",
    "shelljs": "^0.8.3",
    "snyk": "^1.290.1",
    "tar": "^4.4.8",
    "tar-fs": "^2.0.0",
    "tar-stream": "^2.0.1"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.0",
    "@types/elliptic": "^6.4.7",
    "@types/fs-extra": "^5.1.0",
    "@types/global-modules": "^2.0.0",
    "@types/graphql": "^14.2.0",
    "@types/graphql-type-json": "^0.1.3",
    "@types/jest": "^24.0.12",
    "@types/joi": "^14.3.1",
    "@types/js-yaml": "^3.12.0",
    "@types/lodash": "^4.14.126",
    "@types/node": "^12.0.0",
    "@types/tar": "^4.0.0",
    "@types/tar-fs": "^1.16.1",
    "@types/tar-stream": "^1.6.0",
    "@xyo-network/config-tslint": "^0.1.31",
    "copyfiles": "^2.1.0",
    "jest": "^24.9.0",
    "license-checker": "^25.0.1",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.12.1",
    "typescript": "^3.4.5"
  },
  "snyk": true
}
